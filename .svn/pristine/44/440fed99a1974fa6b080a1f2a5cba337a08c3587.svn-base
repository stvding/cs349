/* Put any additional CSS here */
* {
    margin: 0;
    padding: 0;
}
body {
    background-color: #FFFFFF;
}
.toolbar {
    background-color: #EEEEEE;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    flex-direction: column;
    -webkit-flex-direction: column;
    margin-bottom: 10px;
}

.view-toggle, .logo, .rating-filter {
    margin: 5px;
}

@media only screen and (min-width: 760px) {
    /* Mobile-first, so make larger screens the exception */
    .toolbar {
        flex-direction: row;
        -webkit-flex-direction: row;
        align-items: center;
    }
    .rating-filter {
        margin-left: auto;
    }
}

h1 {
    padding: 10px;
}

@font-face {
    font-family: 'icomoon';
    src:url('fonts/icomoon.eot?-3vg7q3');
    src:url('fonts/icomoon.eot?#iefix-3vg7q3') format('embedded-opentype'),
        url('fonts/icomoon.woff?-3vg7q3') format('woff'),
        url('fonts/icomoon.ttf?-3vg7q3') format('truetype'),
        url('fonts/icomoon.svg?-3vg7q3#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
    font-family: 'icomoon';
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;

    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.icon-grid, .icon-list {
    cursor: pointer;
    font-size: 30px;
}

.icon-grid:before {
    content: "\e600";
}

.icon-list:before {
    content: "\e9ba";
}

.icon-star-empty:before {
    content: "\e9e2";
}

.icon-star-half:before {
    content: "\e9d8";
}

.icon-star-full:before {
    content: "\e9d9";
}
